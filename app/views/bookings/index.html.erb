<%= render "pages/header_partial" %>

<div class='bookingcontainer bookingindexcontainer'>
  <div class='infobox highlighted bookinglist'>
    <h3> My Bookings </h3>
      <% @bookings.each do |booking| %>
      <ul>
        <%= link_to booking_path(booking) do %>
        <%= cl_image_tag booking.shoe.image1.key, class:'bookingimg' %>  <%= booking.shoe.model %> <p class= "status"><%= booking.status %></p>
        <% end %>
      </ul>
      <% end %>
  </div>

  <div class='infobox highlighted bookinglist'>
  <h3> My Booked Shoes </h3>
      <% @booked.each do |booking| %>
        <div class='eachbooking'>
          <div class='eachimg'>
            <%= cl_image_tag booking.shoe.image1.key, class:'bookedimg' %>
            <p style="font-size: smaller;">Status:</p><p class= "status"><%= booking.status %></p>
          </div>
          <div class='eachdescription'>
            <p>Model: <%= booking.shoe.model %></p>
            <p>Booked by: <%= booking.shoe.user.first_name %>  <%= booking.shoe.user.last_name %></p>
            <p>For: <%= booking.pick_up_date.strftime("%d.%m.%Y") %> - <%= booking.return_date.strftime("%d.%m.%Y") %></p>
            <p>Balance: â‚¬<%= booking.total_price %></p>
            <%= link_to 'Confirm booking', bookings_path(booking.id), method: :post %>
          </div>
       </div>
      <% end %>
  </div>
</div>
